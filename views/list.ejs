<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1> 
  </div>

  <div class="box">
    <% newListItems.forEach(function(item){ %>
      <form action = "/delete" method="post">
        <div class="item">
        <input type="checkbox">
        <p><%=  item.name %></p>
        <button type="submit" name = "delete" value = "<%=item._id%>">-</button>        
        </div>
      <input type="hidden" name = "listName" value = "<%= listTitle %>">
      </form> 
    <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="type task here and click ->" autocomplete="off">
        <button type="submit" name="list" value = "<%= listTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
